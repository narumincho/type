{
  "name": "@narumincho/type",
  "version": "1.0.8",
  "description": "Generate TypeScript type definitions, encode and decode code",
  "main": "source/main.js",
  "scripts": {
    "test": "node test/start.js",
    "generateTypeCode": "node schema/start.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/narumincho/type.git"
  },
  "author": "narumincho <narumincho.starfy@gmail.com> (https://narumincho.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/narumincho/type/issues"
  },
  "homepage": "https://github.com/narumincho/type#readme",
  "devDependencies": {
    "@types/cli-color": "^2.0.0",
    "@types/node": "^14.0.14",
    "@types/prettier": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "cli-color": "^2.0.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "js-ts-code-generator": "^0.2.17"
  },
  "eslintConfig": {
    "extends": [
      "eslint:all",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module",
      "project": [
        "./source/tsconfig.json",
        "./schema/tsconfig.json",
        "./test/tsconfig.json",
        "./testOut/tsconfig.json"
      ]
    },
    "rules": {
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-else-return": [
        "error",
        {
          "allowElseIf": false
        }
      ],
      "one-var": [
        "error",
        "never"
      ],
      "sort-keys": [
        "off"
      ],
      "no-magic-numbers": [
        "off"
      ],
      "max-lines-per-function": [
        "off"
      ],
      "no-undefined": [
        "off"
      ],
      "default-case": [
        "off"
      ],
      "no-ternary": [
        "off"
      ],
      "id-length": [
        "off"
      ],
      "consistent-return": [
        "off"
      ],
      "new-cap": [
        "off"
      ],
      "no-use-before-define": [
        "off"
      ],
      "max-lines": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "max-params": [
        "off"
      ],
      "prefer-template": [
        "off"
      ],
      "spaced-comment": [
        "off"
      ],
      "no-bitwise": [
        "off"
      ],
      "capitalized-comments": [
        "off"
      ],
      "array-callback-return": [
        "off"
      ],
      "max-statements": [
        "off"
      ],
      "prefer-destructuring": [
        "off"
      ],
      "@typescript-eslint/restrict-plus-operands": [
        "error",
        {
          "checkCompoundAssignments": true
        }
      ],
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "generic"
        }
      ],
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/no-dynamic-delete": [
        "error"
      ],
      "@typescript-eslint/no-require-imports": [
        "error"
      ],
      "@typescript-eslint/no-unnecessary-qualifier": [
        "error"
      ],
      "@typescript-eslint/no-unused-expressions": [
        "error"
      ],
      "@typescript-eslint/prefer-for-of": [
        "error"
      ],
      "@typescript-eslint/require-array-sort-compare": [
        "error"
      ],
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "variables": false
        }
      ],
      "@typescript-eslint/no-empty-function": [
        "off"
      ]
    }
  }
}
